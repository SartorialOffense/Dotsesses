                   CornerRadius="8"
                   BorderBrush="#9B59B6"
                   BorderThickness="2"
                   Padding="40,25,40,25"
                   Margin="80,120,80,120"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center">
                <StackPanel Spacing="15">
                    <!-- Title -->
                    <TextBlock Text="Dotsesses"
                              FontSize="32"
                              FontWeight="Bold"
                              Foreground="White"
                              HorizontalAlignment="Center" />

                    <!-- Subtitle -->
                    <TextBlock Text="Wrangle those dots!!!"
                              FontSize="14"
                              Foreground="#B4B4C8"
                              HorizontalAlignment="Center"
                              Margin="0,-10,0,0" />

                    <!-- Loading Status -->
                    <TextBlock x:Name="LoadingText"
                              Text="Initializing Python environment..."
                              FontSize="12"
                              Foreground="#8B8B9E"
                              HorizontalAlignment="Center"
                              Margin="0,5,0,0" />

                    <!-- Progress Bar -->
                    <ProgressBar IsIndeterminate="True"
                                Height="4"
                                Width="300"
                                Foreground="#9B59B6"
                                Background="#2E2E3E" />
                </StackPanel>
