<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Dotsesses.UI"
        xmlns:local="using:Dotsesses.UI"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:oxy="clr-namespace:OxyPlot.Avalonia;assembly=OxyPlot.Avalonia"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="Dotsesses.UI.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Dotsesses - Grade Distribution"
        Width="1200" Height="800">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="175,5,*">
        <!-- Top Row: Color Panel, Size Panel, Dotplot, and Compliance Panel (fixed 175px height) -->
        <Grid Grid.Row="0" ColumnDefinitions="Auto,Auto,*,Auto">

            <!-- Color Selection Panel -->
            <Border Grid.Column="0"
                   Background="#000000"
                   BorderBrush="#3F3F46"
                   BorderThickness="0,0,1,0"
                   Padding="0">
                <Grid>
                    <!-- Collapsed State: Hamburger icon with rotated text -->
                    <StackPanel IsVisible="{Binding !IsColorSelectionPaneOpen}"
                               Orientation="Vertical"
                               Spacing="0">
                        <Button Command="{Binding ToggleColorSelectionPaneCommand}"
                               Width="18"
                               Height="18"
                               BorderThickness="0"
                               Padding="0"
                               Margin="3,6,3,3"
                               HorizontalAlignment="Center"
                               Cursor="Hand"
                               ToolTip.Tip="Color by">
                            <TextBlock Text="☰"
                                     Foreground="White"
                                     FontSize="14"
                                     Margin="0"
                                     HorizontalAlignment="Center"/>
                        </Button>
                        <LayoutTransformControl Margin="2,8,2,0">
                            <LayoutTransformControl.LayoutTransform>
                                <RotateTransform Angle="-90"/>
                            </LayoutTransformControl.LayoutTransform>
                            <TextBlock Text="Color by"
                                   Foreground="White"
                                   FontSize="14"
                                   HorizontalAlignment="Center"/>
                        </LayoutTransformControl>
                    </StackPanel>

                    <!-- Expanded State: Full Panel -->
                    <Border IsVisible="{Binding IsColorSelectionPaneOpen}"
                           Padding="3,6,10,10">
                        <StackPanel Spacing="8" MinWidth="150">
                            <Grid ColumnDefinitions="Auto,*">
                                <Button Grid.Column="0"
                                       Command="{Binding ToggleColorSelectionPaneCommand}"
                                       Height="18"
                                       Width="18"
                                       BorderThickness="0"
                                       Padding="0"
                                       Margin="0"
                                       Cursor="Hand"
                                       ToolTip.Tip="Collapse">
                                    <TextBlock Text="☰"
                                             Foreground="White"
                                             FontSize="14"
                                             Margin="0"
                                             HorizontalAlignment="Center"/>
                                </Button>
                                <TextBlock Grid.Column="1"
                                         Text="Color by"
                                         Foreground="White"
                                         FontSize="14"
                                         Margin="8,0,0,0"
                                         VerticalAlignment="Center"/>
                            </Grid>

                            <ComboBox ItemsSource="{Binding AvailableColorAttributes}"
                                     SelectedItem="{Binding SelectedColorAttribute}"
                                     HorizontalAlignment="Stretch"
                                     Background="#1E1E1E"
                                     Foreground="White"/>

                            <!-- Color Legend -->
                            <ItemsControl ItemsSource="{Binding ColorLegend}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Orientation="Horizontal" Spacing="6" Margin="0,4">
                                            <Border Width="16"
                                                   Height="16"
                                                   Background="{Binding Color}"
                                                   CornerRadius="2"/>
                                            <TextBlock Text="{Binding Value}"
                                                     Foreground="White"
                                                     FontSize="12"
                                                     VerticalAlignment="Center"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Size Panel -->
            <Border Grid.Column="1"
                   Background="#000000"
                   BorderBrush="#3F3F46"
                   BorderThickness="0,0,1,0"
                   Padding="0">
                <Grid>
                    <!-- Collapsed State: Hamburger icon with rotated text -->
                    <StackPanel IsVisible="{Binding !IsSizePaneOpen}"
                               Orientation="Vertical"
                               Spacing="0">
                        <Button Command="{Binding ToggleSizePaneCommand}"
                               Width="18"
                               Height="18"
                               BorderThickness="0"
                               Padding="0"
                               Margin="3,6,3,3"
                               HorizontalAlignment="Center"
                               Cursor="Hand"
                               ToolTip.Tip="Size">
                            <TextBlock Text="☰"
                                     Foreground="White"
                                     FontSize="14"
                                     Margin="0"
                                     HorizontalAlignment="Center"/>
                        </Button>
                        <LayoutTransformControl Margin="2,8,2,0">
                            <LayoutTransformControl.LayoutTransform>
                                <RotateTransform Angle="-90"/>
                            </LayoutTransformControl.LayoutTransform>
                            <TextBlock Text="Size"
                                   Foreground="White"
                                   FontSize="14"
                                   HorizontalAlignment="Center"/>
                        </LayoutTransformControl>
                    </StackPanel>

                    <!-- Expanded State: Full Panel -->
                    <Border IsVisible="{Binding IsSizePaneOpen}"
                           Padding="3,6,10,10">
                        <StackPanel Spacing="8" MinWidth="150">
                            <Grid ColumnDefinitions="Auto,*">
                                <Button Grid.Column="0"
                                       Command="{Binding ToggleSizePaneCommand}"
                                       Height="18"
                                       Width="18"
                                       BorderThickness="0"
                                       Padding="0"
                                       Margin="0"
                                       Cursor="Hand"
                                       ToolTip.Tip="Collapse">
                                    <TextBlock Text="☰"
                                             Foreground="White"
                                             FontSize="14"
                                             Margin="0"
                                             HorizontalAlignment="Center"/>
                                </Button>
                                <TextBlock Grid.Column="1"
                                         Text="Size"
                                         Foreground="White"
                                         FontSize="14"
                                         Margin="8,0,0,0"
                                         VerticalAlignment="Center"/>
                            </Grid>

                            <Slider Value="{Binding DotSize}"
                                   Minimum="2"
                                   Maximum="10"
                                   TickFrequency="1"
                                   IsSnapToTickEnabled="True"
                                   Foreground="White"/>

                            <TextBlock Text="{Binding DotSize, StringFormat='Dot Size: {0}'}"
                                     Foreground="White"
                                     FontSize="12"
                                     HorizontalAlignment="Center"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>

            <!-- Dotplot -->
            <Border Grid.Column="2" Background="#000000">
                <Grid>
                    <oxy:PlotView x:Name="DotPlotView" Model="{Binding DotplotModel}">
                        <oxy:PlotView.Cursor>
                            <MultiBinding>
                                <MultiBinding.Converter>
                                    <local:ResizeCursorConverter/>
                                </MultiBinding.Converter>
                                <Binding Path="IsResizeCursor"/>
                            </MultiBinding>
                        </oxy:PlotView.Cursor>
                    </oxy:PlotView>
                    <!-- Canvas overlay for hover marker in screen coordinates -->
                    <Canvas x:Name="DotPlotHoverOverlay" Background="Transparent" IsHitTestVisible="False" />
                </Grid>
            </Border>

            <!-- Compliance Panel -->
            <Border Grid.Column="3"
                   Background="#000000"
                   BorderBrush="#3F3F46"
                   BorderThickness="1,0,0,0"
                   Padding="0">
                <Grid>
                    <!-- Collapsed State: Hamburger icon with rotated text -->
                    <StackPanel IsVisible="{Binding !IsCompliancePaneOpen}"
                               Orientation="Vertical"
                               Spacing="0">
                        <Button Command="{Binding ToggleCompliancePaneCommand}"
                               Width="18"
                               Height="18"
                               BorderThickness="0"
                               Padding="0"
                               Margin="3,6,3,3"
                               HorizontalAlignment="Center"
                               Cursor="Hand"
                               ToolTip.Tip="Curve Compliance">
                            <TextBlock Text="☰"
                                     Foreground="White"
                                     FontSize="14"
                                     Margin="0"
                                     HorizontalAlignment="Center"/>
                        </Button>
                        <LayoutTransformControl Margin="2,8,2,0">
                            <LayoutTransformControl.LayoutTransform>
                                <RotateTransform Angle="-90"/>
                            </LayoutTransformControl.LayoutTransform>
                            <TextBlock Text="Curve Compliance"
                                   Foreground="White"
                                   FontSize="14"
                                   HorizontalAlignment="Center"/>
                        </LayoutTransformControl>
                    </StackPanel>

                    <!-- Expanded State: Full Panel -->
                    <Border IsVisible="{Binding IsCompliancePaneOpen}"
                           Padding="3,6,10,10"
                           MinWidth="250">
                        <Grid RowDefinitions="Auto,*">
                            <!-- Header with hamburger -->
                            <Grid Grid.Row="0" ColumnDefinitions="Auto,*" Margin="0,0,0,8">
                                <Button Grid.Column="0"
                                       Command="{Binding ToggleCompliancePaneCommand}"
                                       Height="18"
                                       Width="18"
                                       BorderThickness="0"
                                       Padding="0"
                                       Margin="0"
                                       Cursor="Hand"
                                       ToolTip.Tip="Collapse">
                                    <TextBlock Text="☰"
                                             Foreground="White"
                                             FontSize="14"
                                             Margin="0"
                                             HorizontalAlignment="Center"/>
                                </Button>
                                <TextBlock Grid.Column="1"
                                         Text="Curve Compliance"
                                         Foreground="White"
                                         FontSize="14"
                                         Margin="8,0,0,0"
                                         VerticalAlignment="Center"/>
                            </Grid>

                            <!-- Compliance Grid -->
                            <ScrollViewer Grid.Row="1" Padding="0">
                            <ItemsControl ItemsSource="{Binding ComplianceRows}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Padding="2,0" Margin="0,0.5">
                                            <Grid ColumnDefinitions="Auto,Auto,Auto,Auto,Auto">
                                                <!-- Checkbox -->
                                                <CheckBox Grid.Column="0"
                                                         IsChecked="{Binding IsEnabled}"
                                                         Margin="0,0,8,0"
                                                         VerticalAlignment="Center"/>

                                                <!-- Grade with DisplayName -->
                                                <TextBlock Grid.Column="1"
                                                          Text="{Binding Grade.DisplayName}"
                                                          Foreground="White"
                                                          VerticalAlignment="Center"
                                                          FontWeight="Medium"/>

                                                <!-- Target Count -->
                                                <TextBlock Grid.Column="2"
                                                          Text="{Binding TargetCount}"
                                                          Foreground="#CCCCCC"
                                                          Margin="5,0"
                                                          VerticalAlignment="Center"
                                                          TextAlignment="Right"/>

                                                <!-- Current Count -->
                                                <TextBlock Grid.Column="3"
                                                          Text="{Binding CurrentCount}"
                                                          Foreground="White"
                                                          Margin="5,0"
                                                          VerticalAlignment="Center"
                                                          TextAlignment="Right"
                                                          FontWeight="SemiBold"/>

                                                <!-- Deviation with color coding -->
                                                <TextBlock Grid.Column="4"
                                                          Margin="5,0,0,0"
                                                          VerticalAlignment="Center"
                                                          TextAlignment="Right"
                                                          IsVisible="{Binding HasDeviation}"
                                                          FontWeight="Bold">
                                                    <TextBlock.Text>
                                                        <MultiBinding StringFormat="{}{0:+0;-0;0}">
                                                            <Binding Path="SignedDeviation"/>
                                                        </MultiBinding>
                                                    </TextBlock.Text>
                                                    <TextBlock.Foreground>
                                                        <MultiBinding>
                                                            <MultiBinding.Converter>
                                                                <local:DeviationColorConverter/>
                                                            </MultiBinding.Converter>
                                                            <Binding Path="SignedDeviation"/>
                                                        </MultiBinding>
                                                    </TextBlock.Foreground>
                                                </TextBlock>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                        </Grid>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Splitter -->
        <GridSplitter Grid.Row="1"
                      Background="#3F3F46"
                      ResizeDirection="Rows"
                      HorizontalAlignment="Stretch"/>

        <!-- Bottom Row: Drill-Down and Violin Plot with Horizontal Expanders -->
        <Border Grid.Row="2" Background="#000000" BorderBrush="#3F3F46" BorderThickness="0,1,0,0">
            <Grid ColumnDefinitions="300,5,*">

                <!-- Left: Drill-Down Panel -->
                <Border Grid.Column="0"
                       Background="#000000"
                       BorderBrush="#3F3F46"
                       BorderThickness="0,0,1,0"
                       Padding="3,6,3,6">
                    <ContentControl Content="{Binding HoveredStudent}"
                                   HorizontalAlignment="Stretch"
                                   HorizontalContentAlignment="Stretch">
                        <ContentControl.ContentTemplate>
                            <DataTemplate x:DataType="vm:StudentCardViewModel">
                                <Border Background="#1A1A1A"
                                       BorderBrush="#007ACC"
                                       BorderThickness="2"
                                       CornerRadius="4"
                                       Padding="15"
                                       HorizontalAlignment="Stretch">
                                                        <Grid RowDefinitions="Auto,Auto">
                                                            <!-- Header: Name and Grade -->
                                                            <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="0,0,0,10">
                                                                <TextBlock Grid.Column="0"
                                                                         Text="{Binding Assessment.MuppetName}"
                                                                         Foreground="White"
                                                                         FontWeight="SemiBold"
                                                                         FontSize="14"
                                                                         TextWrapping="Wrap"/>
                                                                <Border Grid.Column="1"
                                                                       Background="#007ACC"
                                                                       CornerRadius="3"
                                                                       Padding="8,4"
                                                                       Margin="10,0,0,0">
                                                                    <TextBlock Text="{Binding AssignedGrade}"
                                                                             Foreground="White"
                                                                             FontWeight="Bold"
                                                                             FontSize="14"/>
                                                                </Border>
                                                            </Grid>

                                                            <!-- Single merged table: Scores first, then Attributes -->
                                                            <StackPanel Grid.Row="1">
                                                                <!-- Scores -->
                                                                <ItemsControl ItemsSource="{Binding Assessment.Scores}">
                                                                    <ItemsControl.ItemTemplate>
                                                                        <DataTemplate>
                                                                            <Grid ColumnDefinitions="*,Auto" Margin="0,2">
                                                                                <TextBlock Grid.Column="0"
                                                                                         Text="{Binding Name}"
                                                                                         Foreground="#AAAAAA"
                                                                                         FontSize="11"/>
                                                                                <TextBlock Grid.Column="1"
                                                                                         Text="{Binding Value, StringFormat='{}{0:0}'}"
                                                                                         Foreground="White"
                                                                                         FontSize="11"
                                                                                         FontWeight="Medium"/>
                                                                            </Grid>
                                                                        </DataTemplate>
                                                                    </ItemsControl.ItemTemplate>
                                                                </ItemsControl>

                                                                <!-- Separator line -->
                                                                <Border Height="1"
                                                                       Background="#666666"
                                                                       Margin="0,8"
                                                                       HorizontalAlignment="Stretch"/>

                                                                <!-- Attributes -->
                                                                <ItemsControl ItemsSource="{Binding Assessment.Attributes}">
                                                                    <ItemsControl.ItemTemplate>
                                                                        <DataTemplate>
                                                                            <Grid ColumnDefinitions="*,Auto" Margin="0,2" TextElement.Foreground="White">
                                                                                <TextBlock Grid.Column="0"
                                                                                         Text="{Binding Name}"
                                                                                         Foreground="#AAAAAA"
                                                                                         FontSize="11"/>
                                                                                <TextBlock Grid.Column="1"
                                                                                         Text="{Binding Value}"
                                                                                         FontSize="11"
                                                                                         FontWeight="Medium"/>
                                                                            </Grid>
                                                                        </DataTemplate>
                                                                    </ItemsControl.ItemTemplate>
                                                                </ItemsControl>

                                                                <!-- Comment Section -->
                                                                <Border Height="1"
                                                                       Background="#666666"
                                                                       Margin="0,8"
                                                                       HorizontalAlignment="Stretch"/>

                                                                <TextBlock Text="Comment"
                                                                          Foreground="#AAAAAA"
                                                                          FontSize="11"
                                                                          FontWeight="SemiBold"
                                                                          Margin="0,4,0,4"/>

                                                                <Border Background="#1E1E1E"
                                                                       BorderBrush="#3F3F46"
                                                                       BorderThickness="1"
                                                                       CornerRadius="3"
                                                                       Padding="6"
                                                                       MinHeight="60">
                                                                    <TextBlock TextWrapping="Wrap"
                                                                              Foreground="#CCCCCC"
                                                                              FontSize="11"
                                                                              FontStyle="Italic">
                                                                        <TextBlock.Text>
                                                                            <MultiBinding>
                                                                                <MultiBinding.Converter>
                                                                                    <x:Static Member="local:CommentDisplayConverter.Instance"/>
                                                                                </MultiBinding.Converter>
                                                                                <Binding Path="Assessment.Comment"/>
                                                                            </MultiBinding>
                                                                        </TextBlock.Text>
                                                                    </TextBlock>
                                                                </Border>

                                                                <TextBlock Text="(Double-click or right-click a dot to edit comment)"
                                                                          Foreground="#666666"
                                                                          FontSize="10"
                                                                          FontStyle="Italic"
                                                                          Margin="0,4,0,0"/>
                                                            </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ContentControl.ContentTemplate>
                    </ContentControl>
                </Border>

                <!-- Vertical Splitter -->
                <GridSplitter Grid.Column="1"
                              Background="#3F3F46"
                              ResizeDirection="Columns"
                              VerticalAlignment="Stretch"/>

                <!-- Right: Violin Plot Panel -->
                <Border Grid.Column="2"
                       Background="#000000"
                       BorderBrush="#3F3F46"
                       BorderThickness="1,0,0,0"
                       Padding="3,6,10,10">
                    <local:ViolinPlotControl DataContext="{Binding ViolinPlotViewModel}" />
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
