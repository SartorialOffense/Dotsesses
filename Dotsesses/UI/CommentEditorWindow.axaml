<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Dotsesses.UI"
        x:Class="Dotsesses.UI.CommentEditorWindow"
        x:DataType="vm:CommentEditorViewModel"
        Title="Edit Student Comment"
        Width="600" Height="300"
        MinWidth="400" MinHeight="200"
        WindowStartupLocation="CenterOwner"
        CanResize="True">
    <Grid RowDefinitions="Auto,*,Auto" Margin="20">
        <!-- Student Name Header -->
        <TextBlock Grid.Row="0"
                   Text="{Binding StudentName}"
                   FontSize="16"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10" />

        <!-- Comment TextBox -->
        <TextBox Grid.Row="1"
                 x:Name="CommentTextBox"
                 Text="{Binding Comment}"
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 Watermark="Enter comment here..."
                 VerticalContentAlignment="Top"
                 Padding="8" />

        <!-- Button Panel -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Spacing="10"
                    Margin="0,15,0,0">
            <Button Content="OK"
                    Click="OnOkClick"
                    Width="100"
                    Height="32"
                    Background="#0A84FF"
                    Foreground="White"
                    BorderThickness="0"
                    CornerRadius="6"
                    FontWeight="SemiBold"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Cursor="Hand">
                <Button.Styles>
                    <Style Selector="Button:pointerover">
                        <Setter Property="Background" Value="#409CFF"/>
                    </Style>
                    <Style Selector="Button:pressed">
                        <Setter Property="Background" Value="#006FDB"/>
                    </Style>
                </Button.Styles>
            </Button>
            <Button Content="Cancel"
                    Click="OnCancelClick"
                    Width="100"
                    Height="32"
                    Background="#3A3A3C"
                    Foreground="White"
                    BorderThickness="0"
                    CornerRadius="6"
                    FontWeight="SemiBold"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Cursor="Hand">
                <Button.Styles>
                    <Style Selector="Button:pointerover">
                        <Setter Property="Background" Value="#48484A"/>
                    </Style>
                    <Style Selector="Button:pressed">
                        <Setter Property="Background" Value="#2C2C2E"/>
                    </Style>
                </Button.Styles>
            </Button>
        </StackPanel>
    </Grid>
</Window>
