<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Dotsesses.ViewModels"
        x:Class="Dotsesses.Views.CommentEditorWindow"
        x:DataType="vm:CommentEditorViewModel"
        Title="Edit Student Comment"
        Width="600" Height="300"
        MinWidth="400" MinHeight="200"
        WindowStartupLocation="CenterOwner"
        CanResize="True">
    <Grid RowDefinitions="Auto,*,Auto" Margin="20">
        <!-- Student Name Header -->
        <TextBlock Grid.Row="0"
                   Text="{Binding StudentName}"
                   FontSize="16"
                   FontWeight="Bold"
                   Margin="0,0,0,10" />

        <!-- Comment TextBox -->
        <Border Grid.Row="1"
                BorderBrush="#9B59B6"
                BorderThickness="1"
                CornerRadius="4"
                Padding="8">
            <TextBox x:Name="CommentTextBox"
                     Text="{Binding Comment}"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     Watermark="Enter comment here..."
                     Background="Transparent"
                     BorderThickness="0" />
        </Border>

        <!-- Button Panel -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Spacing="10"
                    Margin="0,15,0,0">
            <Button Content="OK"
                    Click="OnOkClick"
                    Width="100"
                    Height="32"
                    Background="#9B59B6"
                    Foreground="White"
                    BorderThickness="0"
                    CornerRadius="4"
                    FontWeight="SemiBold"
                    Cursor="Hand">
                <Button.Styles>
                    <Style Selector="Button:pointerover">
                        <Setter Property="Background" Value="#8E44AD"/>
                    </Style>
                    <Style Selector="Button:pressed">
                        <Setter Property="Background" Value="#7D3C98"/>
                    </Style>
                </Button.Styles>
            </Button>
            <Button Content="Cancel"
                    Click="OnCancelClick"
                    Width="100"
                    Height="32"
                    Background="#3F3F46"
                    Foreground="White"
                    BorderThickness="0"
                    CornerRadius="4"
                    FontWeight="SemiBold"
                    Cursor="Hand">
                <Button.Styles>
                    <Style Selector="Button:pointerover">
                        <Setter Property="Background" Value="#52525B"/>
                    </Style>
                    <Style Selector="Button:pressed">
                        <Setter Property="Background" Value="#27272A"/>
                    </Style>
                </Button.Styles>
            </Button>
        </StackPanel>
    </Grid>
</Window>
