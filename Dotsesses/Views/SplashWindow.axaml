<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Dotsesses.Views.SplashWindow"
        Title="Dotsesses"
        Width="600" Height="400"
        WindowStartupLocation="CenterScreen"
        CanResize="False"
        SystemDecorations="None"
        Background="Transparent"
        TransparencyLevelHint="Transparent">
    <Border Background="#1E1E2E" CornerRadius="12" BorderBrush="#9B59B6" BorderThickness="2">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="60" />
            </Grid.RowDefinitions>

            <!-- Logo/Icon -->
            <Viewbox Grid.Row="0" Width="200" Height="200" Margin="0,40,0,0">
                <Canvas Width="200" Height="200">
                    <!-- Messy scattered dots with varying sizes -->
                    <Ellipse Width="85" Height="85" Fill="#3498DB" Canvas.Left="15" Canvas.Top="65" Opacity="0.9" />
                    <Ellipse Width="35" Height="35" Fill="#E74C3C" Canvas.Left="145" Canvas.Top="25" Opacity="0.85" />
                    <Ellipse Width="95" Height="95" Fill="#2ECC71" Canvas.Left="70" Canvas.Top="90" Opacity="0.9" />
                    <Ellipse Width="42" Height="42" Fill="#F39C12" Canvas.Left="8" Canvas.Top="10" Opacity="0.8" />
                    <Ellipse Width="68" Height="68" Fill="#9B59B6" Canvas.Left="130" Canvas.Top="120" Opacity="0.9" />
                    <Ellipse Width="30" Height="30" Fill="#E67E22" Canvas.Left="105" Canvas.Top="15" Opacity="0.75" />
                    <Ellipse Width="55" Height="55" Fill="#1ABC9C" Canvas.Left="155" Canvas.Top="75" Opacity="0.85" />
                    <Ellipse Width="48" Height="48" Fill="#3498DB" Canvas.Left="45" Canvas.Top="145" Opacity="0.8" />
                    <Ellipse Width="38" Height="38" Fill="#E74C3C" Canvas.Left="110" Canvas.Top="165" Opacity="0.85" />
                    <Ellipse Width="52" Height="52" Fill="#F39C12" Canvas.Left="165" Canvas.Top="145" Opacity="0.8" />
                    <Ellipse Width="28" Height="28" Fill="#9B59B6" Canvas.Left="75" Canvas.Top="35" Opacity="0.75" />
                    <Ellipse Width="45" Height="45" Fill="#2ECC71" Canvas.Left="25" Canvas.Top="155" Opacity="0.8" />
                </Canvas>
            </Viewbox>

            <!-- Title and Version -->
            <StackPanel Grid.Row="1" HorizontalAlignment="Center" Margin="0,0,0,20">
                <TextBlock Text="Dotsesses"
                          FontSize="32"
                          FontWeight="Bold"
                          Foreground="White"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,8" />
                <TextBlock Text="Dot Wrangler"
                          FontSize="14"
                          Foreground="#B4B4C8"
                          HorizontalAlignment="Center" />
            </StackPanel>

            <!-- Loading indicator -->
            <StackPanel Grid.Row="2" VerticalAlignment="Center" Margin="0,0,0,20">
                <TextBlock x:Name="LoadingText"
                          Text="Initializing Python environment..."
                          FontSize="12"
                          Foreground="#8B8B9E"
                          HorizontalAlignment="Center"
                          Margin="0,0,0,10" />
                <ProgressBar IsIndeterminate="True"
                            Height="4"
                            Width="300"
                            Foreground="#9B59B6"
                            Background="#2E2E3E" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
