<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Dotsesses.ViewModels"
        xmlns:local="using:Dotsesses.Views"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:oxy="clr-namespace:OxyPlot.Avalonia;assembly=OxyPlot.Avalonia"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="Dotsesses.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/avalonia-logo.ico"
        Title="Dotsesses - Grade Distribution"
        Width="1200" Height="800">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="2*,5,*">
        <!-- Top Row: Dotplot and Compliance Grid -->
        <SplitView Grid.Row="0"
                   IsPaneOpen="{Binding IsCompliancePaneOpen}"
                   DisplayMode="Inline"
                   OpenPaneLength="300"
                   PanePlacement="Right">

            <!-- Main Content: Dotplot -->
            <SplitView.Content>
                <Grid RowDefinitions="Auto,*">
                    <!-- Toolbar with clear button -->
                    <Border Grid.Row="0" Background="#181818" Padding="5">
                        <Button Command="{Binding ClearSelectionsCommand}"
                                HorizontalAlignment="Left"
                                Background="Transparent"
                                BorderThickness="0"
                                Padding="5"
                                ToolTip.Tip="Clear all selections">
                            <TextBlock Text="⌫" FontSize="16" Foreground="White"/>
                        </Button>
                    </Border>

                    <!-- Dotplot -->
                    <Border Grid.Row="1" Background="#181818" Padding="10">
                        <oxy:PlotView Model="{Binding DotplotModel}" />
                    </Border>
                </Grid>
            </SplitView.Content>

            <!-- Pane: Compliance Grid -->
            <SplitView.Pane>
                <Border Background="#181818" BorderBrush="#3F3F46" BorderThickness="1,0,0,0">
                    <Grid RowDefinitions="Auto,*">
                        <!-- Pane Header -->
                        <Border Grid.Row="0" Background="#181818" Padding="10">
                            <TextBlock Text="Curve Compliance"
                                     FontSize="16"
                                     FontWeight="SemiBold"
                                     Foreground="White"/>
                        </Border>

                        <!-- Compliance Grid -->
                        <ScrollViewer Grid.Row="1" Padding="10">
                            <ItemsControl ItemsSource="{Binding ComplianceRows}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Padding="2,1" Margin="0,1">
                                            <Grid ColumnDefinitions="Auto,60,50,50,50">
                                                <!-- Checkbox -->
                                                <CheckBox Grid.Column="0"
                                                         IsChecked="{Binding IsEnabled}"
                                                         Margin="0,0,8,0"
                                                         VerticalAlignment="Center"/>

                                                <!-- Grade with DisplayName -->
                                                <TextBlock Grid.Column="1"
                                                          Text="{Binding Grade.DisplayName}"
                                                          Foreground="White"
                                                          VerticalAlignment="Center"
                                                          FontWeight="Medium"/>

                                                <!-- Target Count -->
                                                <TextBlock Grid.Column="2"
                                                          Text="{Binding TargetCount}"
                                                          Foreground="#CCCCCC"
                                                          Margin="5,0"
                                                          VerticalAlignment="Center"
                                                          TextAlignment="Right"/>

                                                <!-- Current Count -->
                                                <TextBlock Grid.Column="3"
                                                          Text="{Binding CurrentCount}"
                                                          Foreground="White"
                                                          Margin="5,0"
                                                          VerticalAlignment="Center"
                                                          TextAlignment="Right"
                                                          FontWeight="SemiBold"/>

                                                <!-- Deviation with color coding -->
                                                <TextBlock Grid.Column="4"
                                                          Margin="5,0,0,0"
                                                          VerticalAlignment="Center"
                                                          TextAlignment="Right"
                                                          IsVisible="{Binding HasDeviation}"
                                                          FontWeight="Bold">
                                                    <TextBlock.Text>
                                                        <MultiBinding StringFormat="{}{0:+0;-0;0}">
                                                            <Binding Path="SignedDeviation"/>
                                                        </MultiBinding>
                                                    </TextBlock.Text>
                                                    <TextBlock.Foreground>
                                                        <MultiBinding>
                                                            <MultiBinding.Converter>
                                                                <local:DeviationColorConverter/>
                                                            </MultiBinding.Converter>
                                                            <Binding Path="SignedDeviation"/>
                                                        </MultiBinding>
                                                    </TextBlock.Foreground>
                                                </TextBlock>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </SplitView.Pane>
        </SplitView>

        <!-- Splitter -->
        <GridSplitter Grid.Row="1"
                      Background="#3F3F46"
                      ResizeDirection="Rows"
                      HorizontalAlignment="Stretch"/>

        <!-- Toggle Button for Compliance Pane -->
        <Button Grid.Row="0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="10"
                Padding="10"
                Command="{Binding ToggleCompliancePaneCommand}"
                Background="#2D2D30"
                Foreground="White"
                ToolTip.Tip="Toggle Compliance Panel">
            <TextBlock Text="☰" FontSize="16" />
        </Button>

        <!-- Bottom Row: Selected Student Cards -->
        <Border Grid.Row="2" Background="#181818" BorderBrush="#3F3F46" BorderThickness="0,1,0,0">
            <Grid RowDefinitions="Auto,*">
                <!-- Header -->
                <Border Grid.Row="0" Background="#181818" Padding="10">
                    <TextBlock Text="Selected Students"
                             FontSize="16"
                             FontWeight="SemiBold"
                             Foreground="White"/>
                </Border>

                <!-- Student Cards -->
                <ScrollViewer Grid.Row="1" Padding="10">
                    <ItemsControl ItemsSource="{Binding SelectedStudents}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#181818"
                                       BorderBrush="#3F3F46"
                                       BorderThickness="1"
                                       CornerRadius="4"
                                       Padding="15"
                                       Margin="5"
                                       Width="300">
                                    <Grid RowDefinitions="Auto,Auto">
                                        <!-- Header: Name and Grade -->
                                        <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="0,0,0,10">
                                            <TextBlock Grid.Column="0"
                                                     Text="{Binding Assessment.MuppetName}"
                                                     Foreground="White"
                                                     FontWeight="SemiBold"
                                                     FontSize="14"
                                                     TextWrapping="Wrap"/>
                                            <Border Grid.Column="1"
                                                   Background="#007ACC"
                                                   CornerRadius="3"
                                                   Padding="8,4"
                                                   Margin="10,0,0,0">
                                                <TextBlock Text="{Binding AssignedGrade}"
                                                         Foreground="White"
                                                         FontWeight="Bold"
                                                         FontSize="14"/>
                                            </Border>
                                        </Grid>

                                        <!-- Single merged table: Scores first, then Attributes -->
                                        <StackPanel Grid.Row="1">
                                            <!-- Scores -->
                                            <ItemsControl ItemsSource="{Binding Assessment.Scores}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid ColumnDefinitions="*,Auto" Margin="0,2">
                                                            <TextBlock Grid.Column="0"
                                                                     Text="{Binding Name}"
                                                                     Foreground="#AAAAAA"
                                                                     FontSize="11"/>
                                                            <TextBlock Grid.Column="1"
                                                                     Text="{Binding Value}"
                                                                     Foreground="White"
                                                                     FontSize="11"
                                                                     FontWeight="Medium"/>
                                                        </Grid>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>

                                            <!-- Separator line -->
                                            <Border Height="1"
                                                   Background="#666666"
                                                   Margin="0,8"
                                                   HorizontalAlignment="Stretch"/>

                                            <!-- Attributes -->
                                            <ItemsControl ItemsSource="{Binding Assessment.Attributes}">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Grid ColumnDefinitions="*,Auto" Margin="0,2">
                                                            <TextBlock Grid.Column="0"
                                                                     Text="{Binding Name}"
                                                                     Foreground="#AAAAAA"
                                                                     FontSize="11"/>
                                                            <TextBlock Grid.Column="1"
                                                                     Text="{Binding Value}"
                                                                     Foreground="White"
                                                                     FontSize="11"
                                                                     FontWeight="Medium"/>
                                                        </Grid>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Window>
